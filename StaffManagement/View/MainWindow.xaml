<Window x:Class="StaffManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaffManagement"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
            
        <TabControl>
            <TabItem Header="Сотрудники">
                <ListView>
                    <ListView.View>
                        <GridView AllowsColumnReorder="true">
                            <GridViewColumn Header="Имя" Width="auto"/>
                            <GridViewColumn Header="Фамилия" Width="auto" />
                            <GridViewColumn Header="Отчество" Width="auto"/>
                            <GridViewColumn Header="Должность" Width="auto"/>
                            <GridViewColumn Header="Оклад" Width="auto"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Отделы">
                
            </TabItem>
            <TabItem Header="Должности">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>

<Window x:Class="StaffManagement.View.AddNewPositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaffManagement.View"
        xmlns:vm="clr-namespace:StaffManagement.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddNewPositionWindow" Height="300" Width="300"
        Name="AddNewPositionWnd">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Width="200">
            <TextBlock Text="Name"/>
            <TextBox Name="NameBlock" Text=""/>
            <TextBlock Text="Salary"/>
            <TextBox Name="SalaryBlock" Text=""/>
            <TextBlock Text="Max count of staff"/>
            <TextBox Name="MaxCountOfStuffBlock" Text=""/>
            <TextBlock Text="Department"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add Position"/>
    </Grid>
</Window>
